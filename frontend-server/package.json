{
  "private": true,
  "name": "frontend-server",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "swc src -C minify=true -d ./dist --strip-leading-paths",
    "start": "cross-env NODE_ENV=development nodemon",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "eslint --fix ./src/**/*.ts",
    "prettier": "prettier --check  --config ./.prettierrc.cjs ./src/**/*.ts",
    "prettier:fix": "prettier --write --config ./.prettierrc.cjs ./src/**/*.ts",
    "check": "npm run lint && npm run prettier && npx tsc --noEmit"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "@types/nunjucks": "^3.2.6",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.8",
    "@swc/helpers": "^0.5.7",
    "axios": "^1.6.8",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "nunjucks": "^3.2.4",
    "typescript": "^5.4.3",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
